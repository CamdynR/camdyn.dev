<style>
  footer {
    background: linear-gradient(var(--gray-gradient)) no-repeat;
    box-sizing: content-box;
    color: rgb(var(--gray));
    display: grid;
    font-size: 1rem;
    margin: 3rem auto;
    max-width: var(--content-width);
    padding: var(--content-padding);
    row-gap: 0.75rem;

    p {
      margin: 0;
    }

    nav {
      align-items: flex-end;
      border-bottom: 1px dashed var(--color-text-main);
      display: flex;
      justify-content: space-between;

      ul {
        box-sizing: content-box;
        display: flex;
        list-style-type: none;
        gap: 1.5rem;
        margin: 0;
        padding: 0 0 0.75rem 0;

        &.social-links {
          padding: 0 0 1rem 0;
        }

        li {
          height: fit-content;

          a {
            text-decoration: none;

            &:hover {
              text-decoration: underline;
            }
          }
        }
      }
    }

    #copy-and-social-links {
      display: flex;
      justify-content: space-between;
      place-items: center;
    }
  }

  .social-links {
    display: flex;
    gap: 1em;
    justify-content: center;
    place-items: center;

    a {
      color: rgb(var(--gray));
      display: block;
      height: 32px;
      text-decoration: none;

      &:hover {
        color: rgb(var(--gray-dark));
      }
    }
  }

  @media (max-width: 475px) {
    footer #copy-and-social-links {
      display: grid;
      justify-content: flex-start;
      gap: 3rem;
      place-items: initial;
      width: 100%;

      p {
        display: block;
        width: calc(100dvw - 2 * var(--content-padding));
      }
    }
  }
</style>
