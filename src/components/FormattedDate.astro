---
interface Props {
  date: Date;
  long?: Boolean;
}

const { date, long } = Astro.props;
---

<time datetime={date.toISOString()}>
  <!-- {
    long &&
      date.toLocaleDateString('en-us', {
        weekday: 'long'
      }) + ' - '
  } -->
  {
    date.toLocaleDateString('en-us', {
      year: 'numeric',
      month: long ? 'long' : 'short',
      day: 'numeric'
    })
  }
</time>
